<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".activities.PostActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/page1"
        android:layout_width="408dp"
        android:layout_height="815dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/background" />

        <EditText
            android:id="@+id/pH"
            android:layout_width="286dp"
            android:layout_height="44dp"
            android:ems="10"
            android:hint="pH tanah (opsional)"
            android:inputType="numberDecimal"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:visibility="visible"
            tools:layout_editor_absoluteX="61dp"
            tools:layout_editor_absoluteY="349dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="164dp"
            android:layout_height="29dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="216dp"
            android:fontFamily="sans-serif"
            android:text="Parameter Tanah"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/deep"
            android:layout_width="285dp"
            android:layout_height="38dp"
            android:ems="10"
            android:hint="Kedalaman tanah (opsional)"
            android:inputType="numberDecimal"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:visibility="visible"
            tools:layout_editor_absoluteX="61dp"
            tools:layout_editor_absoluteY="275dp" />

        <Button
            android:id="@+id/open_camera"
            android:layout_width="286dp"
            android:layout_height="34dp"
            android:background="@drawable/rounded_button_black"
            android:text="Open Camera"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="8dp"
            tools:layout_editor_absoluteX="61dp"
            tools:layout_editor_absoluteY="438dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="127dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/app_bar_radius"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <com.google.android.material.divider.MaterialDivider
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:dividerColor="@android:color/darker_gray"

        app:dividerThickness="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="215dp" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:dividerColor="@android:color/darker_gray"
        app:dividerThickness="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="430dp" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:dividerColor="@android:color/darker_gray"
        app:dividerThickness="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="645dp" />

    <fragment
        android:id="@+id/nav_host_fragment"
        android:name="com.tbear9.openfarm.Fragments.PostPageNav"
        class="com.tbear9.openfarm.Fragments.PostPageNav"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>