<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PostActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="336dp"
        android:layout_height="604dp"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="63dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/background" />

        <androidx.camera.view.PreviewView
            android:id="@+id/preview"
            android:layout_width="338dp"
            android:layout_height="538dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/background" />

        <Button
            android:id="@+id/cebret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="124dp"
            android:layout_marginTop="12dp"
            android:text="Cebret"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/preview" />

        <EditText
            android:id="@+id/pH"
            android:layout_width="232dp"
            android:layout_height="41dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="pH tanah"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/deep"
            app:layout_constraintTop_toBottomOf="@+id/deep" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="164dp"
            android:layout_height="29dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="4dp"
            android:text="Parameter Tanah"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/deep"
            android:layout_width="232dp"
            android:layout_height="41dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="Kedalaman tanah"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <Button
            android:id="@+id/open_galery"
            android:layout_width="91dp"
            android:layout_height="34dp"
            android:layout_marginTop="20dp"
            android:text="open galery"
            android:textSize="8sp"
            app:layout_constraintStart_toStartOf="@+id/pH"
            app:layout_constraintTop_toBottomOf="@+id/pH" />

        <Button
            android:id="@+id/open_camera"
            android:layout_width="91dp"
            android:layout_height="34dp"
            android:layout_marginTop="20dp"
            android:text="open camera"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="@+id/pH"
            app:layout_constraintTop_toBottomOf="@+id/pH" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>