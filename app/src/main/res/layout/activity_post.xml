<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".activities.PostActivity">

    

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/page1"
        android:layout_width="408dp"
        android:layout_height="815dp"
        android:background="@color/white"
        android:visibility="gone">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/app_bar_radius" />

        <EditText
            android:id="@+id/pH"
            android:layout_width="286dp"
            android:layout_height="44dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="pH tanah (opsional)"
            android:inputType="numberDecimal"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/deep" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="164dp"
            android:layout_height="29dp"
            android:layout_marginTop="156dp"
            android:fontFamily="sans-serif"
            android:text="Parameter Tanah"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/deep"
            android:layout_width="285dp"
            android:layout_height="38dp"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:hint="Kedalaman tanah (opsional)"
            android:inputType="numberDecimal"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <Button
            android:id="@+id/openCamera"
            android:layout_width="286dp"
            android:layout_height="34dp"
            android:layout_marginTop="76dp"
            android:background="@drawable/rounded_button_black"
            android:text="Open Camera"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pH" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginEnd="411dp"
        android:layout_marginBottom="731dp"
        android:background="@drawable/app_bar_radius"
        android:visibility="gone" />


    <com.google.android.material.divider.MaterialDivider
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="731dp"
        android:visibility="gone"

        app:dividerColor="@android:color/darker_gray"
        app:dividerThickness="1dp" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="731dp"
        android:visibility="gone"
        app:dividerColor="@android:color/darker_gray"
        app:dividerThickness="1dp" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="731dp"
        android:visibility="gone"
        app:dividerColor="@android:color/darker_gray"
        app:dividerThickness="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>