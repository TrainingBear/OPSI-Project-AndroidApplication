<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
             android:layout_height="match_parent">


    <ImageView
        android:id="@+id/logoleaves"
        android:layout_width="325dp"
        android:layout_height="403dp"
        android:layout_marginTop="308dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/leaveslogoclean" />

    <Button
        android:id="@+id/btnPanduan"
        android:layout_width="360dp"
        android:layout_height="62dp"
        android:layout_marginTop="648dp"
        android:background="@drawable/rounded_button_with_outline"
        android:drawablePadding="8dp"
        android:text="How to use"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tombolPengetahuan"
        android:layout_width="360dp"
        android:layout_height="62dp"
        android:layout_marginTop="728dp"
        android:background="@drawable/rounded_button_with_outline"
        android:drawablePadding="8dp"
        android:text="Why plants are important"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>