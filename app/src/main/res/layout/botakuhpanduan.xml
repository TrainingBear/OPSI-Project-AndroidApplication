<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/botakuhpanduan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Gambar panjang -->
        <ImageView
            android:id="@+id/imagePanduan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/botakuhpanduannew__1_"
            android:contentDescription="Panduan Gambar Botakuh" />

        <!-- Tombol panah kiri atas -->
        <ImageButton
            android:id="@+id/tombolKembali2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:layout_gravity="top|start"
            android:background="@android:color/transparent"
            android:src="@drawable/panahkiri_removebg_preview_1"
            android:contentDescription="Tombol kembali" />
    </FrameLayout>
</ScrollView>
