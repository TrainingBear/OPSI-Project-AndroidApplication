<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeColor="@color/black"
    app:strokeWidth="1dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/plantImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/plantTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monstera Deliciosa"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <!-- Deskripsi -->
        <TextView
            android:id="@+id/plantDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daun besar berlubang, cocok di cahaya tidak langsung."
            android:textSize="14sp"
            android:layout_marginTop="6dp" />


        <TextView
            android:id="@+id/plantMeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pH 6–7 • Tanah porous"
            android:background="@drawable/meta_background"
            android:padding="6dp"
            android:textSize="12sp"
            android:layout_marginTop="10dp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
